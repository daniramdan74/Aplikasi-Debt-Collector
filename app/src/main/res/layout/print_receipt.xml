<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/text1"
    android:textSize="16dp"
    android:textStyle="bold"
    android:text="Bank Danamon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/text1"
            android:id="@+id/text2"
            android:textSize="14dp"
            android:text="Receipt Pembayaran Tagihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@id/text2"
            android:id="@+id/text3"
            android:textSize="14dp"
            android:text="Id Ref : 1234-5678-90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@id/text3"
            android:id="@+id/text4"
            android:textSize="14dp"
            android:text="Tgl      : 30 November 2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_below="@id/text4"
            android:id="@+id/text5"
            android:textSize="14dp"
            android:text="===================================="
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text5"
            android:id="@+id/text6"
            android:textSize="14dp"
            android:text="Jumlah Tagihan : 5.000.000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_below="@id/text6"
            android:id="@+id/text7"
            android:textSize="14dp"
            android:text="Bulan : Desember 2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_below="@id/text7"
            android:id="@+id/text8"
            android:textSize="14dp"
            android:text="Status : Lunas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>